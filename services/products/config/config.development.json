{
  "serviceName": "products_service",
  "deliveryType": "http",
  "context": {
    "timeout": 20
  },
  "grpc": {
    "port": ":6003",
    "development": true
  },
  "rabbitMq": {
    "user": "guest",
    "password": "guest",
    "host": "localhost",
    "port": 5672,
    "exchangeName": "products",
    "kind" : "topic"
  },
  "http": {
    "port": ":5000",
    "development": true,
    "timeout": 30,
    "basePath": "/api/v1",
    "host": "http://localhost",
    "productsPath": "products",
    "debugHeaders": true,
    "httpClientDebug": true,
    "debugErrorsResponse": true,
    "ignoreLogUrls": [
      "metrics"
    ]
  },
  "logger": {
    "level": "debug"
  },
  "gormPostgres": {
    "host": "localhost",
    "port": 5432,
    "user": "postgres",
    "password": "postgres",
    "dbName": "products_service",
    "sslMode": false
  },
  "kafka": {
    "brokers": [
      "localhost:9092"
    ],
    "groupID": "products_service_consumer",
    "initTopics": true
  },
  "kafkaTopics": {
    "productCreate": {
      "topicName": "product_create",
      "partitions": 10,
      "replicationFactor": 1
    },
    "productUpdate": {
      "topicName": "product_update",
      "partitions": 10,
      "replicationFactor": 1
    },
    "productCreated": {
      "topicName": "product_created",
      "partitions": 10,
      "replicationFactor": 1
    },
    "productUpdated": {
      "topicName": "product_updated",
      "partitions": 10,
      "replicationFactor": 1
    },
    "productDelete": {
      "topicName": "product_delete",
      "partitions": 10,
      "replicationFactor": 1
    },
    "productDeleted": {
      "topicName": "product_deleted",
      "partitions": 10,
      "replicationFactor": 1
    }
  }
}